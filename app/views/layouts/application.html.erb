<!DOCTYPE html>
<html>
  <head>
    <title>SpotifyPlaylister</title>
    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">

    <%= csrf_meta_tags %>

    <title>Semantic UI CDN</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <style>
  body {background-color: #ebeef4;}
  </style>

  <body>

    <div class="ui vertical large left visible sidebar menu">
      <a class="item" id="menu_button1" href="/playlists">Algorhythm</a>
      <a class="item" id="menu_button" href="/about">About</a>
      <a class="item" id="menu_button" href="/playlists/new">New Playlist</a>

      <% if !logged_in? %>
        <a class="item" id="menu_button" href="/login">Login</a>
        <a class="item" id="menu_button" href="/signup">Signup</a>
      <% else %>
        <a class="item" id="menu_button" href="<%= "/users/#{session[:user_id]}" %>">Profile</a>
        <a class="item" id="menu_button" href="/logout">Logout</a>
      <% end %>

    </div>


    <div class="pusher">
      <%= yield %>
    </div>
  </body>
</html>
